<%= link_to  "Nouveau Shift", new_shift_path, {:class => 'btn btn-info'} %>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time Start</th>
      <th>Time End</th>
      <th>Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @shifts.each do |shift| %>
    <tr>    
      <td><%= shift.shift_date %></td>
      <td><%= shift.shift_time_start %></td>
      <td><%= shift.shift_time_end %></td>
      <td><%= shift.shift_type %></td>
      <td>
      <%= link_to 'Voir', shift_path(shift) %>
      <%= link_to 'Editer', edit_shift_path(shift) %>
      <%= link_to 'Supprimer', shift_path(shift),
              method: :delete,
              data: { confirm: 'Êtes-vous sûr?' } %></td>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>